<?xml version="1.0" encoding="utf-8"?>
<dataController name="Avisos" conflictDetection="overwriteChanges" label="Avisos" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[select
     "Avisos"."IDAvisos" "IDAvisos"
    ,"Avisos"."TituloAvisos" "TituloAvisos"
	,"Avisos"."Informacion" "Informacion"
	,"Avisos"."FechaCreacion" "FechaCreacion"
	,"Avisos"."CreadoPor" "CreadoPor"
	,"Avisos"."IDAvisos" "Idavisos"
	,"Avisos"."Image" "Image"
	,"Avisos"."ImageFileName" "ImageFileName"
	,"Avisos"."ImageContentType" "ImageContentType"
	,"Avisos"."ImageLength" "ImageLength"
	,"Avisos"."Duracion" "Duracion"
from "dbo"."Avisos" "Avisos"
]]></text>
    </command>
    <command id="IDAvisosIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="IDAvisos" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="TituloAvisos" type="String" allowNulls="false" label="Título" length="50" showInSummary="true" />
    <field name="Informacion" type="String" allowQBE="false" allowSorting="false" label="Información" showInSummary="true" />
    <field name="FechaCreacion" type="DateTime" allowNulls="false" dataFormatString="g" label="Fecha Creacion" showInSummary="true" />
    <field name="CreadoPor" type="String" allowNulls="false" label="Creado Por" length="80" showInSummary="true" hidden="true" />
    <field name="Idavisos" type="Int32" allowNulls="false" isPrimaryKey="true" label="Idavisos" readOnly="true" />
    <field name="Image" type="Byte[]" onDemand="true" sourceFields="IDAvisos" onDemandHandler="AvisosImage" onDemandStyle="Thumbnail" allowQBE="false" allowSorting="false" label="Image" showInSummary="true" />
    <field name="ImageFileName" type="String" label="Image File Name" length="100" />
    <field name="ImageContentType" type="String" label="Image Content Type" length="100" />
    <field name="ImageLength" type="Int32" label="Image Length" />
    <field name="Duracion" type="Byte" allowNulls="false" label="Duracion" />
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="Todos los Avisos" access="Public" sortExpression="FechaCreacion desc" showInSelector="false">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="TituloAvisos" columns="50" />
        <dataField fieldName="Informacion" rows="5" />
        <dataField fieldName="Image" columns="15" />
        <dataField fieldName="FechaCreacion" columns="10" readOnly="true" />
      </dataFields>
      <overrideWhen />
    </view>
    <view id="v100" type="Grid" commandId="command1" label="Avisos Creados" filter="CreadoPor = @BusinessRules_UserName" sortExpression="FechaCreacion desc" showInSelector="false">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="TituloAvisos" columns="50" />
        <dataField fieldName="Informacion" rows="5" />
        <dataField fieldName="Image" columns="15" />
        <dataField fieldName="FechaCreacion" columns="10" readOnly="true" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review Avisos" access="Public">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="Avisos" newColumn="true">
          <description><![CDATA[$DefaultEditDescription]]></description>
          <dataFields>
            <dataField fieldName="TituloAvisos" columns="50" />
            <dataField fieldName="Informacion" rows="5" />
            <dataField fieldName="Image" columns="15" />
            <dataField fieldName="CreadoPor" />
            <dataField fieldName="FechaCreacion" columns="10" readOnly="true" />
            <dataField fieldName="Duracion" columns="15" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="editForm2" type="Form" commandId="command1" label="Review Avisos" access="Public">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="Avisos" newColumn="true">
          <description><![CDATA[$DefaultEditDescription]]></description>
          <dataFields>
            <dataField fieldName="TituloAvisos" columns="50" />
            <dataField fieldName="Informacion" rows="5" />
            <dataField fieldName="Image" columns="15" />
            <dataField fieldName="CreadoPor" />
            <dataField fieldName="FechaCreacion" columns="10" readOnly="true" />
            <dataField fieldName="Duracion" columns="15" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New Avisos">
      <headerText>$DefaultCreateViewDescription</headerText>
      <categories>
        <category id="c1" headerText="New Avisos" newColumn="true">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="TituloAvisos" columns="50" />
            <dataField fieldName="Informacion" rows="5" />
            <dataField fieldName="CreadoPor" hidden="true" />
            <dataField fieldName="FechaCreacion" columns="10" hidden="true" />
            <dataField fieldName="Image" columns="15" />
            <dataField fieldName="ImageFileName" textMode="Static" />
            <dataField fieldName="ImageContentType" textMode="Static" />
            <dataField fieldName="ImageLength" columns="15" textMode="Static" />
            <dataField fieldName="Duracion" columns="15" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
  <actions>
    <actionGroup id="ag1" scope="Grid">
      <action id="a1" commandName="Select" commandArgument="editForm1" whenView="grid1" />
      <action id="a2" commandName="Edit" whenView="v100" />
      <action id="a3" commandName="Delete" roles="Administrators, RecursosHumanos, Supervisor" />
      <action id="a6" />
      <action id="a7" commandName="New" commandArgument="grid1" roles="Administrators,Users " />
      <action id="a8" commandName="Duplicate" commandArgument="createForm1" roles="None" />
      <action id="a100" commandName="Select" commandArgument="editForm2" whenView="v100" />
    </actionGroup>
    <actionGroup id="ag2" scope="Form">
      <action id="a1" commandName="Edit" whenView="editForm2" />
      <action id="a2" commandName="Delete" roles="Administrators" />
      <action id="a3" commandName="Cancel" />
      <action id="a4" whenLastCommandName="Edit" commandName="Update" />
      <action id="a5" whenLastCommandName="Edit" commandName="Delete" />
      <action id="a6" whenLastCommandName="Edit" commandName="Cancel" />
      <action id="a7" whenLastCommandName="New" commandName="Insert" />
      <action id="a8" whenLastCommandName="New" commandName="Cancel" />
      <action id="a9" whenLastCommandName="Duplicate" commandName="Insert" />
      <action id="a10" whenLastCommandName="Duplicate" commandName="Cancel" />
      <action id="a13" whenLastCommandName="Insert" whenView="createForm1" commandName="Select" commandArgument="editForm1" whenKeySelected="true" whenClientScript="this.get_hasDetails()" />
    </actionGroup>
    <actionGroup id="ag3" scope="ActionBar" headerText="New" flat="true">
      <action id="a1" commandName="New" commandArgument="createForm1" cssClass="NewIcon" roles="Administrators,Users " />
    </actionGroup>
    <actionGroup id="ag4" scope="ActionBar" headerText="Edit/Delete" flat="true">
      <action id="a1" whenKeySelected="true" commandName="Edit" commandArgument="editForm2" cssClass="EditIcon" whenView="v100" />
      <action id="a2" whenKeySelected="true" commandName="Delete" cssClass="DeleteIcon" whenView="grid1" roles="Administrators, RecursosHumanos, Supervisor" />
    </actionGroup>
    <actionGroup id="ag5" scope="ActionBar" headerText="Actions">
      <action id="a1" commandName="ExportCsv" />
      <action id="a2" />
      <action id="a3" commandName="ExportRowset" />
      <action id="a4" commandName="ExportRss" />
      <action id="a5" />
      <action id="a6" commandName="Import" commandArgument="createForm1" />
      <action id="a7" commandName="DataSheet" />
      <action id="a8" commandName="Grid" />
    </actionGroup>
    <actionGroup id="ag6" scope="ActionBar" headerText="Record">
      <action id="a1" whenLastCommandName="Edit" commandName="Update" />
      <action id="a2" whenLastCommandName="Edit" commandName="Cancel" />
      <action id="a3" whenLastCommandName="New" commandName="Insert" />
      <action id="a4" whenLastCommandName="New" commandName="Cancel" />
    </actionGroup>
    <actionGroup id="ag7" scope="ActionBar" headerText="Report">
      <action id="a1" commandName="ReportAsPdf" />
      <action id="a2" commandName="ReportAsImage" />
      <action id="a3" commandName="ReportAsExcel" />
      <action id="a4" commandName="ReportAsWord" />
    </actionGroup>
    <actionGroup id="ag8" scope="Row">
      <action id="a4" whenLastCommandName="Edit" commandName="Update" />
      <action id="a5" whenLastCommandName="Edit" commandName="Cancel" />
      <action id="a6" whenLastCommandName="New" commandName="Insert" />
      <action id="a7" whenLastCommandName="New" commandName="Cancel" />
    </actionGroup>
  </actions>
  <businessRules>
    <rule id="r100" commandName="Delete" type="Sql" phase="Before" name="Delete_Outdated_Avisos"><![CDATA[DELETE FROM Avisos 
	WHERE (MONTH(FechaCreacion)) <= (MONTH(GETDATE())-2) 
	AND (YEAR(FechaCreacion)) >= YEAR(GETDATE())]]></rule>
    <rule id="r101" commandName="Calculate|Insert|Update" type="Sql" phase="Execute" name="Avisos_Duracion"><![CDATA[declare @Success nvarchar (5) = 'true'
if (@Duracion is not null and @Duracion < 3)
begin
    set @Result_Focus = 'Duracion, La duración debe de ser mayor o igual a 4 segundos.'
    set @Success = 'false'
end

if (@Duracion is not null and @Duracion > 51)
begin
    set @Result_Focus = 'Duracion, La duración debe de ser menor o igual 50 segundos.'
    set @Success = 'false'
end

if (@Arguments_CommandName = 'Calculate' or @Success = 'false')
    set @BusinessRules_PreventDefault = 1]]></rule>
  </businessRules>
</dataController>