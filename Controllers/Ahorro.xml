	,"Ahorro"."Fecha" "Fecha"
	,"Ahorro"."Formula" "Formula"
	,"Ahorro"."Cantidad" "Cantidad"
	,"Ahorro"."SaldoInicial" "SaldoInicial"
	,"Ahorro"."Status" "Status"
	,"Ahorro"."SaldoActual" "SaldoActual"
	,"Ahorro"."Total" "Total"
	,"Ahorro"."CreadoPor" "CreadoPor"
	,"Ahorro"."ModificadoPor" "ModificadoPor"
	,"Ahorro"."CreadoEn" "CreadoEn"
	,"Ahorro"."ModificadoEn" "ModificadoEn"
	,"Ahorro"."ID_Ahorro" "IDAhorro"
	,"Ahorro"."CuentaContable" "CuentaContable"
	,"Ahorro"."Observaciones" "Observaciones"
	,"Ahorro"."FormulaSQL" "FormulaSql"
	,"Ahorro"."SaldarFiniquito" "SaldarFiniquito"
from "dbo"."Ahorro" "Ahorro"
	left join "dbo"."TipoAhorro" "ID_TipoAhorro" on "Ahorro"."ID_TipoAhorro" = "ID_TipoAhorro"."Id_TipoAhorro"
	left join "dbo"."Empleado" "TheID_Empleado" on "Ahorro"."ID_Empleado" = "TheID_Empleado"."ID_Empleado"
]]></text>
    </command>
