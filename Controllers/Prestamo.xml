    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Prestamo"."Referencia" "Referencia"
	,"Prestamo"."Id_TipoPrestamo" "IDTipoprestamo"
	,"TheId_TipoPrestamo"."Descripcion" "TheidTipoprestamodescripcion"
	,"Prestamo"."Id_Empleado" "IDEmpleado"
	,"Id_Empleado"."NombreCompleto" "IDEmpleadonombrecompleto"
	,"Prestamo"."Abonos" "Abonos"
	,"Prestamo"."Cargos" "Cargos"
	,"Prestamo"."FechaInicio" "FechaInicio"
	,"Prestamo"."FormulaDescuento" "FormulaDescuento"
	,"Prestamo"."Importe" "Importe"
	,"Prestamo"."NoAbonos" "NoAbonos"
	,"Prestamo"."SaldoInicial" "SaldoInicial"
	,"Prestamo"."Estatus" "Estatus"
	,"Prestamo"."Total" "Total"
	,"Prestamo"."Saldo" "Saldo"
	,"Prestamo"."CreadoPor" "CreadoPor"
	,"Prestamo"."ModificadoPor" "ModificadoPor"
	,"Prestamo"."CreadoEn" "CreadoEn"
	,"Prestamo"."ModificadoEn" "ModificadoEn"
	,"Prestamo"."id_Prestamo" "IDPrestamo"
	,"Prestamo"."CuentaContable" "CuentaContable"
	,"Prestamo"."Observaciones" "Observaciones"
	,"Prestamo"."FormulaDescuentoSQL" "FormulaDescuentoSql"
	,"Prestamo"."SaldarFiniquito" "SaldarFiniquito"
from "dbo"."Prestamo" "Prestamo"
	left join "dbo"."TipoPrestamo" "TheId_TipoPrestamo" on "Prestamo"."Id_TipoPrestamo" = "TheId_TipoPrestamo"."Id_TipoPrestamo"
	left join "dbo"."Empleado" "Id_Empleado" on "Prestamo"."Id_Empleado" = "Id_Empleado"."ID_Empleado"
]]></text>
    </command>
    <command id="id_PrestamoIdentityCommand" type="Text" event="Inserted">
