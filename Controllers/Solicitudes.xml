    <rule id="r108" commandName="Insert|Update" type="Sql" phase="After" name="S_AhorroAprobado" view="editForm1"><![CDATA[if (@IDEstatussolicitud is not null and @IDEstatussolicitud = 3 and @IDTiposolicitud is not null and @IDTiposolicitud = 1)
begin
	INSERT INTO dbo.Ahorro
        ( ID_TipoAhorro , ID_Empleado , OtrosAbonos , OtrosCargos , Fecha , Formula , Cantidad , SaldoInicial ,
          Status , SaldoActual , Total , CreadoPor , ModificadoPor , CreadoEn , ModificadoEn , CuentaContable ,
          Observaciones , FormulaSQL , SaldarFiniquito
        )
VALUES  ( '1' , -- ID_TipoAhorro - char(1)
          @IDEmpleado , -- ID_Empleado - int
          0 , -- OtrosAbonos - numeric
          0 , -- OtrosCargos - numeric
          @FechaSolicitada , -- Fecha - datetime
          '' , -- Formula - varchar(8000)
          @Cantidad , -- Cantidad - smallint
          0.00 , -- SaldoInicial - numeric
          0 , -- Status - smallint
          0.00 , -- SaldoActual - numeric
          0.00 , -- Total - numeric
          @BusinessRules_UserName , -- CreadoPor - varchar(50)
          @BusinessRules_UserName , -- ModificadoPor - varchar(50)
          GETDATE() , -- CreadoEn - datetime
          GETDATE() , -- ModificadoEn - datetime
          '' , -- CuentaContable - varchar(30)
          '' , -- Observaciones - varchar(100)
          '' , -- FormulaSQL - varchar(8000)
          ''  -- SaldarFiniquito - char(1)
        )
end]]></rule>
    <rule id="r109" commandName="Insert|Update" type="Sql" phase="After" name="S_VacacionesAprobadas" view="editForm1"><![CDATA[if (@IDEstatussolicitud is not null and @IDEstatussolicitud = 3 and @IDTiposolicitud is not null and @IDTiposolicitud = 3)
begin
INSERT INTO dbo.Vacaciones
        ( Id_Empleado , Fecha , TipoVacacion , Anio , FechaFin , Observaciones ,
          DerechoPago , DiasPago , SaldoPago , DerechoGozo , DiasGoce , SaldoGoce ,
          SalDiario , DerechoPrima , DiasPrima , SaldoPrima , Id_Prestaciones , Id_Periodo , 
		  MovGlobal , FechaCaptura , CreadoPor , ModificadoPor , CreadoEn , ModificadoEn
        )
VALUES  ( @IDEmpleado , -- Id_Empleado - int
          @FechaSolicitada , -- Fecha - datetime
          1 , -- TipoVacacion - smallint
          1 , -- Anio - smallint
          (@FechaSolicitada+Cantidad) , -- FechaFin - datetime
          '' , -- Observaciones - varchar(100)
          0 , -- DerechoPago - numeric
          0 , -- DiasPago - numeric
          0 , -- SaldoPago - numeric
          0 , -- DerechoGozo - numeric
          0 , -- DiasGoce - numeric
          0 , -- SaldoGoce - numeric
          0 , -- SalDiario - numeric
          0 , -- DerechoPrima - numeric
          0 , -- DiasPrima - numeric
          0 , -- SaldoPrima - numeric
          '' , -- Id_Prestaciones - char(1)
          '' , -- Id_Periodo - varchar(8)
          0 , -- MovGlobal - bit
          GETDATE() , -- FechaCaptura - datetime
          @BusinessRules_UserName , -- CreadoPor - varchar(50)
          @BusinessRules_UserName , -- ModificadoPor - varchar(50)
          GETDATE() , -- CreadoEn - datetime
          GETDATE()  -- ModificadoEn - datetime
        )
end]]></rule>
    <rule id="r110" commandName="Insert|Update" view="editForm1" type="Sql" phase="After" name="S_PrestamoAprobado"><![CDATA[if (@IDEstatussolicitud is not null and @IDEstatussolicitud = 3 and @IDTiposolicitud is not null and @IDTiposolicitud = 2)
begin
INSERT INTO dbo.Prestamo
        ( Referencia , Id_TipoPrestamo , Id_Empleado , Abonos , Cargos , FechaInicio , FormulaDescuento ,
          Importe , NoAbonos , SaldoInicial , Estatus , Total , Saldo , CreadoPor , ModificadoPor , CreadoEn , 
		  ModificadoEn , CuentaContable , Observaciones , FormulaDescuentoSQL , SaldarFiniquito
        )
VALUES  ( '' , -- Referencia - varchar(10) 
          '4' , -- Id_TipoPrestamo - char(3)
          @IDEmpleado , -- Id_Empleado - int
          0 , -- Abonos - money
          0 , -- Cargos - money
          @FechaSolicitada , -- FechaInicio - date
          '' , -- FormulaDescuento - varchar(4000)
          @Cantidad , -- Importe - money
          0 , -- NoAbonos - int
          0 , -- SaldoInicial - money
          0 , -- Estatus - smallint
