  <businessRules>
    <rule id="r100" commandName="Calculate|Insert|Update" type="Sql" phase="Execute" name="S_ValidarFechas"><![CDATA[declare @Success nvarchar (5) = 'true'
if (@FechaSolicitud is not null and @FechaSolicitada is not null and @FechaSolicitada < @FechaSolicitud)
begin
    set @Result_Focus = 'FechaSolicitada, La fecha solicitada debe de ser después a la fecha de solicitud'
    set @Success = 'false'
end

if (@FechaSolicitada is not null and @FechaSolicitada < getDate())
begin
    set @Result_Focus = 'FechaSolicitada, La fecha solicitada debe de ser después del día actual.'
    set @Success = 'false'
end

if (@Arguments_CommandName = 'Calculate' or @Success = 'false')
    set @BusinessRules_PreventDefault = 1]]></rule>
    <rule id="r101" commandName="Insert" type="Sql" phase="Execute" name="S_Solicitud_GetDateTime"><![CDATA[update Solicitudes
set FechaSolicitud = GETDATE()
where ID_Solicitud = @IDSolicitud]]></rule>
    <rule id="r103" commandName="Select" type="Sql" phase="Before" name="Solicitudes_EmpleadosSupervisor" view="v100"><![CDATA[SELECT FechaSolicitud, NombreCompleto, NombreTabla, FechaSolicitada, Cantidad, Notas FROM dbo.Solicitudes, dbo.Empleado, dbo.TipoSolicitud
WHERE Empleado.ID_Empleado = Solicitudes.ID_Empleado AND Solicitudes.ID_TipoSolicitud = TipoSolicitud.ID_TipoSolicitud AND ID_JefeDirecto = (SELECT ID_Empleado FROM dbo.Empleado WHERE RFC = @BusinessRules_UserName);]]></rule>
