  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Solicitudes"."ID_Solicitud" "IDSolicitud"
	,"Solicitudes"."FechaSolicitud" "FechaSolicitud"
	,"Solicitudes"."ID_Empleado" "IDEmpleado"
	,"TheID_Empleado"."NombreCompleto" "NombreCompleto"
	,"Solicitudes"."ID_TipoSolicitud" "IDTiposolicitud"
	,"TheID_TipoSolicitud"."Observaciones" "TheidTiposolicitudobservaciones"
	,"Solicitudes"."FechaSolicitada" "FechaSolicitada"
	,"Solicitudes"."Cantidad" "Cantidad"
	,"Solicitudes"."Notas" "Notas"
	,"Solicitudes"."Observaciones" "Observaciones"
	,"Solicitudes"."ModificadoPor" "ModificadoPor"
	,"Solicitudes"."FechaModificacion" "FechaModificacion"
	,"Solicitudes"."ID_Jefe" "IDJefe"
	,"Solicitudes"."ID_Motivo" "IDMotivo"
	,"Solicitudes"."ID_EstatusSolicitud" "IDEstatussolicitud"
from "dbo"."Solicitudes" "Solicitudes"
	left join "dbo"."Empleado" "TheID_Empleado" on "Solicitudes"."ID_Empleado" = "TheID_Empleado"."ID_Empleado"
	left join "dbo"."TipoSolicitud" "TheID_TipoSolicitud" on "Solicitudes"."ID_TipoSolicitud" = "TheID_TipoSolicitud"."ID_TipoSolicitud"
]]></text>
    </command>
    <command id="ID_SolicitudIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="ID_Solicitud" />
      </output>
    </command>
  </commands>
