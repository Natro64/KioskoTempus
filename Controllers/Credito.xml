	,"Credito"."CreadoEn" "CreadoEn"
	,"Credito"."ModificadoEn" "ModificadoEn"
	,"Credito"."Observaciones" "Observaciones"
	,"Credito"."Activo" "Activo"
from "dbo"."Credito" "Credito"
	left join "dbo"."Empleado" "TheID_Empleado" on "Credito"."ID_Empleado" = "TheID_Empleado"."ID_Empleado"
]]></text>
