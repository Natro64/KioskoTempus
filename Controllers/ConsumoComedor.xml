<?xml version="1.0" encoding="utf-8"?>
<dataController name="ConsumoComedor" conflictDetection="overwriteChanges" label="Consumo Comedor" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"ConsumoComedor"."ID_ConsumoComedor" "IDConsumocomedor"
	,"ConsumoComedor"."ID_Empleado" "IDEmpleado"
	,"TheID_Empleado"."NombreCompleto" "TheidEmpleadonombrecompleto"
	,"ConsumoComedor"."FechaConsumo" "FechaConsumo"
	,"ConsumoComedor"."FechaCreacion" "FechaCreacion"
	,"ConsumoComedor"."ID_ComidaComedor" "IDComidacomedor"
	,"ConsumoComedor"."CreadoPor" "CreadoPor"
from "dbo"."ConsumoComedor" "ConsumoComedor"
	left join "dbo"."Empleado" "TheID_Empleado" on "ConsumoComedor"."ID_Empleado" = "TheID_Empleado"."ID_Empleado"
]]></text>
    </command>
    <command id="ID_ConsumoComedorIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="ID_ConsumoComedor" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="IDConsumocomedor" type="Int32" allowNulls="false" isPrimaryKey="true" label="ID Consumo Comedor" readOnly="true" />
    <field name="IDEmpleado" type="Int32" allowNulls="false" label="Empleado" showInSummary="true">
      <items style="Lookup" dataController="Empleado" newDataView="createForm1" dataValueField="IDEmpleado" dataView="LookUp" dataTextField="NombreCompleto" />
    </field>
    <field name="TheidEmpleadonombrecompleto" type="String" label="Empleado" readOnly="true" length="92" />
    <field name="FechaConsumo" type="DateTime" allowNulls="false" label="Fecha de consumo" showInSummary="true" />
    <field name="FechaCreacion" type="DateTime" dataFormatString="g" default="(NULL)" label="Fecha Creacion" showInSummary="true" />
    <field name="IDComidacomedor" type="Int32" allowNulls="false" label="Comida" showInSummary="true">
      <items style="Lookup" dataController="MenuComedor" newDataView="createForm1" dataValueField="IdmenuComedor" dataTextField="Comida" dataView="v100" copy="FechaConsumo=FechaDisponible" />
    </field>
    <field name="CreadoPor" type="String" allowNulls="false" label="Creado Por" length="40" showInSummary="true" />
    <field name="Comida" type="Int32" allowNulls="false" label="Comida" showInSummary="true">
      <items style="DropDownList" dataController="Comida" newDataView="createForm1" dataValueField="Idcomida" dataTextField="Platillo" />
    </field>
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="Consumo Comedor" sortExpression="FechaCreacion desc" showInSelector="false">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="IDEmpleado" aliasFieldName="TheidEmpleadonombrecompleto" />
        <dataField fieldName="FechaConsumo" columns="10" />
        <dataField fieldName="FechaCreacion" columns="10" />
        <dataField fieldName="IDComidacomedor" columns="15" />
        <dataField fieldName="CreadoPor" columns="40" />
      </dataFields>
    </view>
    <view id="v100" type="Grid" commandId="command1" label="Consumos" filter="ConsumoComedor.ID_Empleado = (SELECT ID_Empleado from Empleado where RFC = @BusinessRules_UserName)" showInSelector="false">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="IDEmpleado" aliasFieldName="TheidEmpleadonombrecompleto" />
        <dataField fieldName="FechaConsumo" columns="10" />
        <dataField fieldName="FechaCreacion" columns="10" />
        <dataField fieldName="IDComidacomedor" columns="15" />
        <dataField fieldName="CreadoPor" columns="40" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review Consumo Comedor">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="Consumo Comedor" newColumn="true">
          <description><![CDATA[$DefaultEditDescription]]></description>
          <dataFields>
            <dataField fieldName="IDEmpleado" aliasFieldName="TheidEmpleadonombrecompleto" tag="lookup-details-hidden" />
            <dataField fieldName="FechaConsumo" columns="10" />
            <dataField fieldName="FechaCreacion" columns="10" textMode="Static" />
            <dataField fieldName="IDComidacomedor" columns="15" />
            <dataField fieldName="CreadoPor" columns="40" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New Consumo Comedor">
      <headerText>$DefaultCreateViewDescription</headerText>
      <categories>
        <category id="c1" headerText="New Consumo Comedor" newColumn="true">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="IDEmpleado" aliasFieldName="TheidEmpleadonombrecompleto" />
            <dataField fieldName="IDComidacomedor" columns="15" />
            <dataField fieldName="FechaConsumo" columns="10" textMode="Static" />
            <dataField fieldName="FechaCreacion" columns="10" hidden="true" />
            <dataField fieldName="CreadoPor" columns="40" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
  <actions>
