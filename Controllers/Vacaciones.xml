	,"Vacaciones"."TipoVacacion" "TipoVacacion"
	,"Vacaciones"."Anio" "Anio"
	,"Vacaciones"."FechaFin" "FechaFin"
	,"Vacaciones"."Observaciones" "Observaciones"
	,"Vacaciones"."DerechoPago" "DerechoPago"
	,"Vacaciones"."DiasPago" "DiasPago"
	,"Vacaciones"."SaldoPago" "SaldoPago"
	,"Vacaciones"."DerechoGozo" "DerechoGozo"
	,"Vacaciones"."DiasGoce" "DiasGoce"
	,"Vacaciones"."SaldoGoce" "SaldoGoce"
	,"Vacaciones"."SalDiario" "SalDiario"
	,"Vacaciones"."DerechoPrima" "DerechoPrima"
	,"Vacaciones"."DiasPrima" "DiasPrima"
	,"Vacaciones"."SaldoPrima" "SaldoPrima"
	,"Vacaciones"."Id_Prestaciones" "IDPrestaciones"
	,"Vacaciones"."Id_Periodo" "IDPeriodo"
	,"Vacaciones"."MovGlobal" "MovGlobal"
	,"Vacaciones"."FechaCaptura" "FechaCaptura"
