	,"Vacaciones"."ModificadoPor" "ModificadoPor"
	,"Vacaciones"."CreadoEn" "CreadoEn"
	,"Vacaciones"."ModificadoEn" "ModificadoEn"
from "dbo"."Vacaciones" "Vacaciones"
	left join "dbo"."Empleado" "Id_Empleado" on "Vacaciones"."Id_Empleado" = "Id_Empleado"."ID_Empleado"
]]></text>
    </command>
