      <text><![CDATA[
select
	"Vacaciones"."Id_Vacaciones" "IDVacaciones"
	,"Vacaciones"."Id_Empleado" "IDEmpleado"
	,"Id_Empleado"."NombreCompleto" "IDEmpleadonombrecompleto"
